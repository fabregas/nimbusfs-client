import os
import sys
import time
import httplib
import getpass
import socket
import tempfile
import subprocess
from datetime import datetime

client_dir = os.environ.get('IDB_LIB_PATH', None)
if not client_dir:
    client_dir = os.path.abspath(os.path.join(os.path.dirname(__file__), '../'))
else:
    sys.path.append(os.path.join(client_dir, 'lib-dynload'))

daemon_script = os.path.join(client_dir, 'id_client/client_daemon.py')
sys.path.append(client_dir)

from id_client.client_daemon import DAEMON_PORT

PID_FILE_NAME = 'idepositbox_client_daemon.pid'

def check_daemon():
    try:
        conn = httplib.HTTPConnection("127.0.0.1", DAEMON_PORT)
        conn.request('GET', '/')
        response = conn.getresponse()
        conn.close()
    except socket.error, err:
        return False
    return True

def get_pid_file():
    return os.path.join(tempfile.gettempdir(), PID_FILE_NAME)

def start_daemon():
    if check_daemon():
        sys.stderr.write('iDepositBox management console is already started\n')
        sys.exit(1)

    t0 = datetime.now()
    cmd = 'nohup %s %s &' % (sys.executable, daemon_script)
    devnull = open('/dev/null', 'r+')
    sp = subprocess.Popen(cmd.split(), stdout=devnull, stderr=devnull, env=os.environ)
    open(get_pid_file(), 'w').write(str(sp.pid))

    print('iDepositBox management console is started at 0.0.0.0:%s'%DAEMON_PORT)


def stop_daemon():
    if not check_daemon():
        sys.stderr.write('iDepositBox management console does not started\n')
        sys.exit(1)

    pid_file = get_pid_file()
    if not os.path.exists(pid_file):
        sys.stderr.write('No pid file %s found. Please, kill client_daemon process manually\n'%pid_file)
        sys.exit(1)

    pid = open(pid_file, 'r').read()
    os.system('kill -s INT %s'%pid)
    os.unlink(pid_file)
    print('iDepositBox management console is stopped!')


def status_daemon():
    if not check_daemon():
        print('iDepositBox management console does not started')
        return 13
    else:
        print('iDepositBox management console is started')
        return 0


if __name__ == '__main__':
    if len(sys.argv) != 2:
        print 'usage: %s start|stop|restart|status'%sys.argv[0]
        sys.exit(1)

    command = sys.argv[1]
    if command == 'start':
        start_daemon()
    elif command == 'stop':
        stop_daemon()
    elif command == 'restart':
        if check_daemon():
            stop_daemon()
            time.sleep(1)
        start_daemon()
    elif command == 'status':
        sys.exit(status_daemon())
    else:
        sys.stderr.write('ERROR! Unknown command "%s"\n'%command)
        sys.exit(1)


